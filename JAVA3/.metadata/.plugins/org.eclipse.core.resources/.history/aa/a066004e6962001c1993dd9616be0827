	public static String inputEmail() throws EmailException  {
		String email = scanner.nextLine();
		boolean check = false;
		while (!check) {
			if (Pattern.matches("^[A-Z0-9._%+-]+@[A-Z0-9.-]+\\\\.[A-Z]{2,6}$", email)) {
				check = true;
			}else {
				throw new EmailException();
			}
			
		}
		return email;
	}
