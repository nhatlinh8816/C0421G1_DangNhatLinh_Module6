	public static int inputChoice() {
		
		int choice = 0;
		boolean check = false;
		while (!check) {
			try {
				System.out.println("Input your choice");
				Scanner scanner = new Scanner(System.in);
				choice = scanner.nextInt();
				check = true;
			} catch (Exception e) {
				System.out.println("Please reinput");;
				check = false;
			}
		}
		return choice;
	}
	
